{
  "name": "pulsar",
  "version": "0.1.0",
  "description": "LD35 gamejam entry",
  "main": "app/window.js",
  "scripts": {
    "clean": "cleandir ./app/",
    "copy:main": "copyfiles -u 1 src/window.js app/",
    "copy:html": "copyfiles -u 1 src/index.html app/",
    "copy:templates": "copyfiles -u 2 src/templates/package.json app/",
    "copy:images": "copyfiles -u 2 'src/images/*' app/assets/",
    "copy:easeljs": "copyfiles -u 3 bower_components/EaselJS/lib/easeljs-0.8.2.min.js app/assets/",
    "copy:preloadjs": "copyfiles -u 3 bower_components/PreloadJS/lib/preloadjs-0.6.2.min.js app/assets/",
    "copy:createjs": "npm run copy:easeljs & npm run copy:preloadjs",
    "electron": "electron .",
    "server": "node ./app/server.js",
    "watch": "webpack --watch",
    "eslint": "npm run lint",
    "build": "npm run clean && webpack -p",
    "generate": "npm run copy:main & npm run copy:html & npm run copy:templates & npm run copy:images & npm run copy:createjs",
    "start": "npm run generate && npm run electron",
    "postinstall": "node_modules/.bin/bower install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DVDAGames/pulsar"
  },
  "keywords": [
    "ld35",
    "ludum",
    "dare",
    "game",
    "game",
    "jam"
  ],
  "author": "dvdagames",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/DVDAGames/pulsar"
  },
  "homepage": "https://github.com/DVDAGames/pulsar",
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "bower": "^1.7.9",
    "clean-dir": "^1.0.3",
    "copyfiles": "^0.2.1",
    "css-loader": "^0.23.1",
    "electron-prebuilt": "^0.37.6",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.4.2",
    "sass-loader": "^3.2.0",
    "script-loader": "^0.6.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0"
  },
  "dependencies": {
    "axios": "^0.9.1",
    "buttonmancer": "^0.2.2",
    "gamepadder": "^0.5.0",
    "hapi": "^13.3.0",
    "inert": "^3.2.0",
    "open": "0.0.5",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-router": "^2.2.4"
  },
  "engines": {
    "node": ">=5.x.x",
    "npm": ">=3.x.x"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
